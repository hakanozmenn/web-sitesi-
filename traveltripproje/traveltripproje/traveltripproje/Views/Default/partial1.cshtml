@using traveltripproje.Models.Siniflar
@model List<blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.blogimage" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.baslik</h4>
                <span class="doller">@x.tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.aciklama.Substring(0,130)</p>
                <p><a href="/blog/blogdetay/@x.ID"><span class="read">Devamını oku>></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2", "Default")
    
    <div class="clear"></div>
</div>

